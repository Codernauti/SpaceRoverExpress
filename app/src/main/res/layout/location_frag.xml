<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/silver_light">

    <ImageButton
        android:id="@+id/close_location_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_close_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="TITLE"
                android:textSize="32dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/location_subtitle_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:text="Appuntamento con Galileo"
                android:textColor="@color/colorAccent"
                android:textSize="18dp"
                />

            <ImageView
                android:id="@+id/location_cover_image"
                android:layout_width="290dp"
                android:layout_height="170dp"
                android:src="@drawable/padova_cover_1"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/location_description_text"
                android:layout_width="280dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:text="@string/loremipsus"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>