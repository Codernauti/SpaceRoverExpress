<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/badge_dialog_background">

    <ImageButton
        android:id="@+id/close_badge_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_close_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="right"
        android:backgroundTint="@color/white"
        />

        <ImageView
            android:id="@+id/badge_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/badge_nasa"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/badge_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="Maratoneta"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/badge_description_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:textSize="22dp"
            android:text="Hai camminato per 5 km!"
            android:textColor="@color/white"
            />

</LinearLayout>