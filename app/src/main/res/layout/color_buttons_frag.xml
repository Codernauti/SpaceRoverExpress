<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_buttons_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/silver_light">

    <Button
        android:id="@+id/first_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:outlineProvider="bounds"
        tools:text="Color"
        android:textSize="20sp"
        android:layout_margin="5dp"

        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/second_button"
        app:layout_constraintBottom_toTopOf="@+id/third_button"
        />

    <Button
        android:id="@+id/second_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:outlineProvider="bounds"
        tools:text="Color"
        android:textSize="20sp"
        android:layout_margin="5dp"

        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/first_button"
        app:layout_constraintBottom_toTopOf="@+id/fourth_button"
        />

    <Button
        android:id="@+id/third_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:outlineProvider="bounds"
        tools:text="Color"
        android:textSize="20sp"
        android:layout_margin="5dp"

        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fourth_button"
        app:layout_constraintTop_toBottomOf="@+id/first_button"
        />

    <Button
        android:id="@+id/fourth_button"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:outlineProvider="bounds"
        android:text="Color"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_button"
        app:layout_constraintStart_toEndOf="@+id/third_button"
        />

    <Button
        android:id="@+id/done_button"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/unlock"
        android:textColor="@color/white"
        android:textSize="25sp"

        app:layout_constraintTop_toBottomOf="@+id/third_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</android.support.constraint.ConstraintLayout>