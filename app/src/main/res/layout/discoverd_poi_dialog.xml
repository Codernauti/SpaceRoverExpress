<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:id="@+id/tutorial_dialog_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tutorial_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:gravity="center"
        tools:text="What's the situation Snake?"

        app:layout_constraintVertical_chainStyle="packed"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tutorial_image"
        app:layout_constraintBottom_toTopOf="@+id/start_game_btn"
        />

    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/tutorial_assistent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tutorial_text"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/start_game_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="@string/trigger_location_start"

        app:layout_constraintHorizontal_bias="0.83"

        app:layout_constraintTop_toBottomOf="@+id/tutorial_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tutorial_image"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>